class Find_Max():
  def __init__(self, list_arg):
    self.list_arg = list_arg
    print("Max value: ",reduce(lambda a,b: a if a>b else b, list_arg))

class Find_Min():
  def __init__(self, list_arg):
    self.list_arg = list_arg
    print("Min value: ",reduce(lambda a,b: a if a<b else b, list_arg))





