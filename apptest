class Find_Max():
  def __init__(self, lista):
    self.lista = lista
    reduce(lambda a,b: a if a>b else b, lista)

class Find_Min():
  def __init__(self, lista):
    self.lista = lista
    reduce(lambda a,b: a if a<b else b, lista)
    
list_find_max = Find_Max(some_list)
list_find_min = Find_Min(some_list)

class Display():
  def __init__(self, x ):
    self.x = x
  
  def print_something(self, x):
    print(x)
    
  def return_square(x):
    return x*2
    
    
class Person():
  def __init__(self, first, last):
    self.first = first
    self.last = last
    
  def __str__(self):
    return self.first + " " + self.last
    
dude = Person("Mark", "Twain")

class Employee(Person):
  def __init__(self, first, last, number):
    super().__init__(first, last)
    self.number = number
    
  def print_emp_number(self):
    print(self.number)

pracownik = Employee("K", "O", 5)
#pracownik.print_emp_number()

