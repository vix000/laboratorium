class Find_Max():
  def __init__(self, lista):
    self.lista = lista
    print("Max value: ",reduce(lambda a,b: a if a>b else b, lista))

class Find_Min():
  def __init__(self, lista):
    self.lista = lista
    print("Min value: ",reduce(lambda a,b: a if a<b else b, lista))
    

list_find_max = Find_Max(the_list)
list_find_min = Find_Min(the_list)
