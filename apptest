the_list = []
def fill_list(some_list):
  while True:
    try:
      ile = int(input("Ile pozycji w liscie ?"))
      break
    except ValueError as e:
      print("Err: ", e)
      continue
  for i in range(ile):
    try:
      x = int(input("Podaj liczbę: "))
      the_list.append(x)
    except ValueError as e:
      print("Err: ", e)
      continue
  return the_list
    
